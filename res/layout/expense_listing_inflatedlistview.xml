<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/expense_listing_list_date_amount_view"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:background="@drawable/list_date_bg"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        >
        
        <TextView 
            android:id="@+id/expenses_listing_list_date_view"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold" 
            android:typeface="sans"
            android:text="Today, Nov 9"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textColor="#00539f"/>
        
        <TextView 
            android:id="@+id/expenses_listing_list_amount_view"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:maxWidth="200dp" 
            android:typeface="sans"
            android:text="1126.99 ?"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textColor="#00539f"/>
        
    </RelativeLayout>
    
	<ListView 
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:layout_below="@id/expense_listing_list_date_amount_view"
	    android:layout_above="@+id/expense_listing_list_add_expenses"
	    android:id="@+id/expense_listing_inflated_listview"
	    />
	
	<LinearLayout
	    android:id="@+id/expense_listing_list_add_expenses"
	    android:gravity="center"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/list_add_expenses_bg"
	    android:layout_alignParentBottom="true">
	    
	    <ImageView 
	        android:src="@drawable/list_add_expenses_add_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
	    
	    <TextView 
	        android:id="@+id/expenses_listing_add_expenses_textview"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
            android:textStyle="bold" 
            android:typeface="sans"
	        android:text="Add expenses to today"
            android:textColor="#00539f"/>
	    
	</LinearLayout>
	
</RelativeLayout>