<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
   	<!-- Header -->
    <RelativeLayout
        android:id="@+id/main_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/topbar_bg" 
        >

        <ImageView
            android:id="@+id/main_listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/list_icon_states" 
            android:paddingRight="5dp"
            android:paddingLeft="10dp"
            >
        </ImageView>

        <TextView
            android:id="@+id/main_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:hapticFeedbackEnabled="false"
            android:text="Expense Tracker"
            android:textAppearance="?android:attr/textAppearanceLarge" 
            android:textStyle="bold" 
            android:typeface="sans"
            >
        </TextView>
    </RelativeLayout>    
    
    <!-- ScrollView for body-->
    <ScrollView
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_below="@id/main_header"
        android:layout_above="@+id/main_footer"
        android:background="@drawable/home_bg"
        android:id="@+id/main_body">
    
	<!-- Body -->
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
           	android:paddingTop="15dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">
        
       		<LinearLayout
        		android:id="@+id/main_graph"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal" 
        		android:background="@drawable/graph"
        		android:layout_marginBottom="20dp"/>

    		
    		<RelativeLayout
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:layout_below="@id/main_graph"
        		android:id="@+id/main_text_voice"
        		android:background="@drawable/text_voice"
        		android:layout_marginBottom="20dp">

        		<Button
        		    android:id="@+id/main_voice"
        		    android:layout_width="wrap_content"
        		    android:layout_height="wrap_content"
        		    android:layout_alignParentRight="true"
        		    android:layout_centerVertical="true"
        		    android:background="@drawable/voice_states" 
        		    android:layout_marginRight="5dp"/>

        		<Button
        		    android:id="@+id/main_text"
        		    android:layout_width="wrap_content"
        		    android:layout_height="wrap_content"
        		    android:layout_alignParentLeft="true"
        		    android:layout_centerVertical="true"
        		    android:layout_marginLeft="5dp"
        		    android:background="@drawable/text_entry_states" />

    		</RelativeLayout>
    		
    	    <LinearLayout
     		    android:id="@+id/main_camera_favorites"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:layout_below="@id/main_text_voice"
        		android:gravity="center" >

        		<Button
            		android:id="@+id/main_camera"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:layout_weight="1"
            		android:background="@drawable/camera_states" 
            		android:layout_marginRight="10dp"/>

        		<Button
            		android:id="@+id/main_favorite"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:layout_weight="1"
            		android:background="@drawable/favorites_states"
            		android:layout_marginLeft="10dp" />
    		</LinearLayout>
        
    	  </RelativeLayout>  
    	      
    
    
    </ScrollView>
    <!-- Footer -->

    <RelativeLayout
        android:id="@id/main_footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_bar_bg"
        >

        <Button
            android:id="@+id/main_save_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/save_reminder_states" />

    </RelativeLayout>
</RelativeLayout>